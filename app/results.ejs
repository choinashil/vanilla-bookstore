<div class="resultsWrapper resultsWrapper-list">
    <div class="summary">'<%= keyword %>' 의 검색결과는 <%= bookdata.total%>건입니다.</div>

<% for(let i = 0; i < bookInfo.length; i++) { %>

<% const title = bookInfo[i].title.replace(/[<b>|</b>]/g, '') %>
<% const author = bookInfo[i].author.replace(/[|]/g, ', ') %>
<% const year = bookInfo[i].pubdate.slice(0, 4) %>
<% const month = Number(bookInfo[i].pubdate.slice(4, 6)) %>
<% const date = Number(bookInfo[i].pubdate.slice(6, 8)) %>
<% const description = bookInfo[i].description.replace(/[<b>|</b>]/g, '').substr(0, 50) %>

    <div class="result result-list" >
        <div class="result-innerWrapper-list" gorilla-click="MoveToNaverBook">
            <img src=<%= bookInfo[i].image %>>
            <div>
                <ul>
                    <li><%= title %></li>
                    <li><%= author %></li>
                    <li><%= bookInfo[i].publisher %></li>
                    <li><%= year + '년 ' + month + '월 '+ date + '일' %></li>
                    <li class="description"><%= description %>...</li>
                    <li><a href="<%= bookInfo[i].link %>" class="naverLink" target="_blank" title="네이버 책으로 이동">구매하기</a></li>
                </ul>
            </div>
        </div>
    </div>
    <% } %>
    <div class="exceedAlert invisible">검색결과가 더 이상 없습니다.</div>
    <%= arrow %>
</div>